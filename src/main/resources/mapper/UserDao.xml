<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  

<mapper namespace="com.wenming.springboot.dao.UserDao">  
     
      <resultMap id="userResultMap" type="User">
		<result property="id" column="id" />
		<result property="nickname" column="nickname" />
		<result property="email" column="email" />
		<result property="pswd" column="pswd" />
		<result property="salt" column="salt" />
		<result property="createTime" column="create_time" />
		<result property="lastLoginTime" column="last_login_time" />
		<result property="status" column="status" />
	</resultMap>
	
	<sql id="userColumns"> 
			id  ,
			nickname  ,
			email  ,
			pswd  ,
			salt  ,
			create_time  ,
			last_login_time  ,
			status  
	</sql>
	
	<select id="get" parameterType="int" resultMap="userResultMap">
		select
		<include refid="userColumns" />
		from user
		where id = #{id}
	</select>
	
	<select id="find" parameterType="java.util.Map" resultMap="userResultMap">
		select
		<include refid="userColumns" />
		from user
		<where>
			<if test="id != null">
				id = #{id}
			</if>
			<if test="nickname != null">
				nickname = #{nickname}
			</if>
			<if test="email != null">
				email = #{email}
			</if>
			<if test="pswd != null">
				pswd = #{pswd}
			</if>
			<if test="salt != null">
				salt = #{salt}
			</if>
			<if test="createTime != null">
				create_time = #{createTime}
			</if>
			<if test="lastLoginTime != null">
				last_login_time = #{lastLoginTime}
			</if>
			<if test="status != null">
				status = #{status}
			</if>
		</where>
	</select>
	
	<select id="page" parameterType="java.util.Map" resultMap="userResultMap">
		select
		<include refid="userColumns" />
		from user
		<where>
			<if test="id != null">
				id = #{id}
			</if>
			<if test="nickname != null">
				nickname = #{nickname}
			</if>
			<if test="email != null">
				email = #{email}
			</if>
			<if test="pswd != null">
				pswd = #{pswd}
			</if>
			<if test="salt != null">
				salt = #{salt}
			</if>
			<if test="createTime != null">
				create_time = #{createTime}
			</if>
			<if test="lastLoginTime != null">
				last_login_time = #{lastLoginTime}
			</if>
			<if test="status != null">
				status = #{status}
			</if>
		</where>
		LIMIT #{_startIndex},#{_pageSize}
	</select>
	
    <select id="total" parameterType="java.util.Map" resultType="int">
		select
		count(1)
		from user
		<where>
			<if test="id != null">
				id = #{id}
			</if>
			<if test="nickname != null">
				nickname = #{nickname}
			</if>
			<if test="email != null">
				email = #{email}
			</if>
			<if test="pswd != null">
				pswd = #{pswd}
			</if>
			<if test="salt != null">
				salt = #{salt}
			</if>
			<if test="createTime != null">
				create_time = #{createTime}
			</if>
			<if test="lastLoginTime != null">
				last_login_time = #{lastLoginTime}
			</if>
			<if test="status != null">
				status = #{status}
			</if>
		</where>
	</select>
    
    <insert id="save" parameterType="User">  
        insert into user(
        #{id},
        #{nickname},
        #{email},
        #{pswd},
        #{salt},
        #{createTime},
        #{lastLoginTime},
        #{status}
        )  
    </insert>  
      
    <update id="update" parameterType="User">
		update user
		<set>
			<if test="nickname != null">
				nickname = #{nickname}
			</if>
			<if test="email != null">
				email = #{email}
			</if>
			<if test="pswd != null">
				pswd = #{pswd}
			</if>
			<if test="salt != null">
				salt = #{salt}
			</if>
			<if test="createTime != null">
				create_time = #{createTime}
			</if>
			<if test="lastLoginTime != null">
				last_login_time = #{lastLoginTime}
			</if>
			<if test="status != null">
				status = #{status}
			</if>
		</set>
		where id = #{id}
	</update>

	<delete id="delete" parameterType="int">
		delete from user where
		id=#{id}
	</delete>
      
</mapper>  
