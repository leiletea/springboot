<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  

<mapper namespace="com.wenming.springboot.dao.UserRoleDao">  
     
      <resultMap id="userRoleResultMap" type="UserRole">
		<result property="uid" column="uid" />
		<result property="rid" column="rid" />
	</resultMap>
	
	<sql id="userRoleColumns"> 
			uid  ,
			rid  
	</sql>
	
	<select id="get" parameterType="int" resultMap="userRoleResultMap">
		select
		<include refid="userRoleColumns" />
		from user_role
		where id = #{id}
	</select>
	
	<select id="find" parameterType="java.util.Map" resultMap="userRoleResultMap">
		select
		<include refid="userRoleColumns" />
		from user_role
		<where>
			uid  ,
			<if test="uid != null">
				uid = #{uid}
			</if>
			rid  
			<if test="rid != null">
				rid = #{rid}
			</if>
		</where>
	</select>
	
	<select id="page" parameterType="java.util.Map" resultMap="userRoleResultMap">
		select
		<include refid="userRoleColumns" />
		from user_role
		<where>
			<if test="uid != null">
				uid = #{uid}
			</if>
			<if test="rid != null">
				rid = #{rid}
			</if>
		</where>
		LIMIT #{_startIndex},#{_pageSize}
	</select>
	
    <select id="total" parameterType="java.util.Map" resultType="int">
		select
		count(1)
		from user_role
		<where>
			<if test="uid != null">
				uid = #{uid}
			</if>
			<if test="rid != null">
				rid = #{rid}
			</if>
		</where>
	</select>
    
    <insert id="save" parameterType="UserRole">  
        insert into user_role(
        #{uid},
        #{rid}
        )  
    </insert>  
      
    <update id="update" parameterType="UserRole">
		update user_role
		<set>
			<if test="uid != null">
				uid = #{uid}
			</if>
			<if test="rid != null">
				rid = #{rid}
			</if>
		</set>
		where id = #{id}
	</update>

	<delete id="delete" parameterType="int">
		delete from user_role where
		id=#{id}
	</delete>
      
</mapper>  
