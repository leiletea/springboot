<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  

<mapper namespace="com.wenming.springboot.dao.RoleDao">  
     
      <resultMap id="roleResultMap" type="Role">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="type" column="type" />
	</resultMap>
	
	<sql id="roleColumns"> 
			id  ,
			name  ,
			type  
	</sql>
	
	<select id="get" parameterType="int" resultMap="roleResultMap">
		select
		<include refid="roleColumns" />
		from role
		where id = #{id}
	</select>
	
	<select id="find" parameterType="java.util.Map" resultMap="roleResultMap">
		select
		<include refid="roleColumns" />
		from role
		<where>
			id  ,
			<if test="id != null">
				id = #{id}
			</if>
			name  ,
			<if test="name != null">
				name = #{name}
			</if>
			type  
			<if test="type != null">
				type = #{type}
			</if>
		</where>
	</select>
	
	<select id="page" parameterType="java.util.Map" resultMap="roleResultMap">
		select
		<include refid="roleColumns" />
		from role
		<where>
			<if test="id != null">
				id = #{id}
			</if>
			<if test="name != null">
				name = #{name}
			</if>
			<if test="type != null">
				type = #{type}
			</if>
		</where>
		LIMIT #{_startIndex},#{_pageSize}
	</select>
	
    <select id="total" parameterType="java.util.Map" resultType="int">
		select
		count(1)
		from role
		<where>
			<if test="id != null">
				id = #{id}
			</if>
			<if test="name != null">
				name = #{name}
			</if>
			<if test="type != null">
				type = #{type}
			</if>
		</where>
	</select>
    
    <insert id="save" parameterType="Role">  
        insert into role(
        #{id},
        #{name},
        #{type}
        )  
    </insert>  
      
    <update id="update" parameterType="Role">
		update role
		<set>
			<if test="name != null">
				name = #{name}
			</if>
			<if test="type != null">
				type = #{type}
			</if>
		</set>
		where id = #{id}
	</update>

	<delete id="delete" parameterType="int">
		delete from role where
		id=#{id}
	</delete>
      
</mapper>  
