<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  

<mapper namespace="com.wenming.springboot.dao.PermissionDao">  
     
      <resultMap id="permissionResultMap" type="Permission">
		<result property="id" column="id" />
		<result property="url" column="url" />
		<result property="name" column="name" />
	</resultMap>
	
	<sql id="permissionColumns"> 
			id  ,
			url  ,
			name  
	</sql>
	
	<select id="get" parameterType="int" resultMap="permissionResultMap">
		select
		<include refid="permissionColumns" />
		from permission
		where id = #{id}
	</select>
	
	<select id="find" parameterType="java.util.Map" resultMap="permissionResultMap">
		select
		<include refid="permissionColumns" />
		from permission
		<where>
			id  ,
			<if test="id != null">
				id = #{id}
			</if>
			url  ,
			<if test="url != null">
				url = #{url}
			</if>
			name  
			<if test="name != null">
				name = #{name}
			</if>
		</where>
	</select>
	
	<select id="page" parameterType="java.util.Map" resultMap="permissionResultMap">
		select
		<include refid="permissionColumns" />
		from permission
		<where>
			<if test="id != null">
				id = #{id}
			</if>
			<if test="url != null">
				url = #{url}
			</if>
			<if test="name != null">
				name = #{name}
			</if>
		</where>
		LIMIT #{_startIndex},#{_pageSize}
	</select>
	
    <select id="total" parameterType="java.util.Map" resultType="int">
		select
		count(1)
		from permission
		<where>
			<if test="id != null">
				id = #{id}
			</if>
			<if test="url != null">
				url = #{url}
			</if>
			<if test="name != null">
				name = #{name}
			</if>
		</where>
	</select>
    
    <insert id="save" parameterType="Permission">  
        insert into permission(
        #{id},
        #{url},
        #{name}
        )  
    </insert>  
      
    <update id="update" parameterType="Permission">
		update permission
		<set>
			<if test="url != null">
				url = #{url}
			</if>
			<if test="name != null">
				name = #{name}
			</if>
		</set>
		where id = #{id}
	</update>

	<delete id="delete" parameterType="int">
		delete from permission where
		id=#{id}
	</delete>
      
</mapper>  
