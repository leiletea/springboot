<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  

<mapper namespace="com.wenming.springboot.dao.RolePermissionDao">  
     
      <resultMap id="rolePermissionResultMap" type="RolePermission">
		<result property="rid" column="rid" />
		<result property="pid" column="pid" />
	</resultMap>
	
	<sql id="rolePermissionColumns"> 
			rid  ,
			pid  
	</sql>
	
	<select id="get" parameterType="int" resultMap="rolePermissionResultMap">
		select
		<include refid="rolePermissionColumns" />
		from role_permission
		where id = #{id}
	</select>
	
	<select id="find" parameterType="java.util.Map" resultMap="rolePermissionResultMap">
		select
		<include refid="rolePermissionColumns" />
		from role_permission
		<where>
			rid  ,
			<if test="rid != null">
				rid = #{rid}
			</if>
			pid  
			<if test="pid != null">
				pid = #{pid}
			</if>
		</where>
	</select>
	
	<select id="page" parameterType="java.util.Map" resultMap="rolePermissionResultMap">
		select
		<include refid="rolePermissionColumns" />
		from role_permission
		<where>
			<if test="rid != null">
				rid = #{rid}
			</if>
			<if test="pid != null">
				pid = #{pid}
			</if>
		</where>
		LIMIT #{_startIndex},#{_pageSize}
	</select>
	
    <select id="total" parameterType="java.util.Map" resultType="int">
		select
		count(1)
		from role_permission
		<where>
			<if test="rid != null">
				rid = #{rid}
			</if>
			<if test="pid != null">
				pid = #{pid}
			</if>
		</where>
	</select>
    
    <insert id="save" parameterType="RolePermission">  
        insert into role_permission(
        #{rid},
        #{pid}
        )  
    </insert>  
      
    <update id="update" parameterType="RolePermission">
		update role_permission
		<set>
			<if test="rid != null">
				rid = #{rid}
			</if>
			<if test="pid != null">
				pid = #{pid}
			</if>
		</set>
		where id = #{id}
	</update>

	<delete id="delete" parameterType="int">
		delete from role_permission where
		id=#{id}
	</delete>
      
</mapper>  
